# ============================================
# AUTOMATIONGLOBAL MARKETING - ENV VARIABLES
# ============================================

# Database (Supabase)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters
REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-minimum-32-characters

# ============================================
# SEMANA 2: SOCIAL MEDIA INTEGRATIONS
# ============================================

# Facebook/Instagram OAuth
# Create app at: https://developers.facebook.com
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/api/social/auth/facebook/callback

# YouTube (Google) OAuth
# Create project at: https://console.cloud.google.com
YOUTUBE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_google_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:5000/api/social/auth/youtube/callback

# Token Encryption Key
# Generate with: node server/services/social/token-encryption.ts
# This key is used to encrypt OAuth tokens in the database
TOKEN_ENCRYPTION_KEY=your_32_character_random_encryption_key

# ============================================
# OPTIONAL: AI SERVICES
# ============================================

# OpenAI (para geração de conteúdo)
OPENAI_API_KEY=sk-...

# Anthropic Claude (para geração de conteúdo)
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# Frontend URL (para CORS em produção)
FRONTEND_URL=http://localhost:5000

# ============================================
# REDIS (Opcional - para cache e queues)
# ============================================

REDIS_URL=redis://localhost:6379

# ============================================
# EMAIL (Opcional - para notificações)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# OBSERVABILITY (Opcional)
# ============================================

# Sentry (error tracking)
SENTRY_DSN=https://...

# LogRocket (session replay)
LOGROCKET_APP_ID=your-app/id
